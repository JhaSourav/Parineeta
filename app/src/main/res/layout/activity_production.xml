<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Production"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/disindicator1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/myutton"
        android:padding="10dp"
        android:text="Disinticator1"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/disindicator2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/myutton"
        android:padding="10dp"
        android:text="Disindicator 2"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/sewing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/myutton"
        android:padding="10dp"
        android:text="Sewing"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/processing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/myutton"
        android:padding="10dp"
        android:text="Pressing and Stocking"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>